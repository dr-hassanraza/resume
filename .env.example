# ============================================
# AI-Powered Resume Optimizer Environment Variables
# Copy this file to .env and update with your actual values
# ============================================

# ===================
# AI API KEYS
# ===================
# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Qwen API Key (optional, for Qwen models)
QWEN_API_KEY=your_qwen_api_key_here

# ===================
# DATABASE CONFIG
# ===================
# PostgreSQL Database URL
DATABASE_URL=postgresql://postgres:password123@localhost:5432/resume_optimizer

# Redis URL for caching and rate limiting
REDIS_URL=redis://:redis123@localhost:6379/0

# ===================
# SECURITY & AUTH
# ===================
# JWT Secret for token signing (generate a random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Application secret key (generate a random string)
SECRET_KEY=your_super_secret_app_key_change_this_in_production

# ===================
# PAYMENT INTEGRATION
# ===================
# Stripe Secret Key (for subscription management)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe Publishable Key (for frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ===================
# EMAIL SERVICE
# ===================
# SendGrid API Key (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key

# ===================
# FRONTEND CONFIG
# ===================
# API URL for frontend to connect to backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===================
# BACKEND CONFIG
# ===================
# CORS allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://127.0.0.1:3000

# Debug mode (set to false in production)
DEBUG=true

# Server host and port
HOST=0.0.0.0
PORT=8000

# ===================
# OPTIONAL SERVICES
# ===================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID (optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# ===================
# FILE UPLOAD CONFIG
# ===================
# Maximum file size for resume uploads (in MB)
MAX_FILE_SIZE=10

# Allowed file types
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Upload directory
UPLOAD_DIR=./uploads

# ===================
# RATE LIMITING
# ===================
# Rate limit for API calls (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ===================
# AI MODEL CONFIG
# ===================
# Default AI model to use
DEFAULT_AI_MODEL=gpt-3.5-turbo

# Maximum tokens for AI responses
MAX_AI_TOKENS=2000

# AI request timeout (in seconds)
AI_TIMEOUT=30

# ===================
# LOGGING CONFIG
# ===================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log